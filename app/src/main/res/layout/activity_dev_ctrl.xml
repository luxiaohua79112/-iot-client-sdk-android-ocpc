<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f8">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNodeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="nodeId"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/svDeviceView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plz_ctrl"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="云台控制"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svDeviceView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plz_stop"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="云台停止"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svDeviceView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plz_reset"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="云台校准"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svDeviceView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sdcard_fmt"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="SD卡格式化"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plz_ctrl" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_media_query"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="文件查询"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plz_ctrl" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_media_delete"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="文件删除"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plz_ctrl" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play_stop"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="播放"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sdcard_fmt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pause_resume"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="暂停"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sdcard_fmt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_speed"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        android:background="#80D6D6D6"
        android:text="倍速"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sdcard_fmt" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFileList"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_play_stop"
        android:elevation="3dp"
        android:overScrollMode="never" />

</androidx.constraintlayout.widget.ConstraintLayout>